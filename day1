#MAX OF AREA BETWEEN TWO WALLS 

#include <iostream>
using namespace std;
 
int container(int walls[], int noOfWalls)
{
    int area = 0;
    for (int i = 0; i < noOfWalls; i++) {
        for (int j = i + 1; j <noOfWalls; j++) {
            area = max(area, min(walls[j], walls[i]) * (j - i));
        }
    }
    return area;
}
 

int main()
{   int noOfWalls;
    cout<<"Enter number of walls : ";
    cin>>noOfWalls;
    int walls[noOfWalls] ;
    cout<<"Enter height of the "<<noOfWalls<<" walls : ";
    for (int i = 0; i < noOfWalls; ++i) {
    cin >> walls[i]; }
    cout <<"Maximum Area : "<< container(walls, noOfWalls);

}
