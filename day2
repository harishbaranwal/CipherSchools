
/*Given an array arr[] of n integers. 
Check whether it contains a triplet that sums up to zero. 
Return 1, if there is at least one triplet 
following the condition else return 0.
*/
#include <iostream>
using namespace std;

int findTripletWithZeroSum(int arr[], int size) {
    for (int i = 0; i < size - 2; ++i) {
        for (int j = i + 1; j < size - 1; ++j) {
            for (int k = j + 1; k < size; ++k) {
                if (arr[i] + arr[j] + arr[k] == 0) {
                    return 1;  
                }}}}
    return 0; }

int main() {
    int size;
    cout<<"Enter the size of array: ";
    cin>>size;
    int arr[size] ;
    cout<<"Enter the "<<size<<" elements: ";
    for (int i = 0; i < size; ++i) {
    cin >> arr[i]; }  
    if (findTripletWithZeroSum(arr, size)) {
        cout << "Output: 1" << endl;
    } else { cout << "Output: 0" << endl; }
    return 0;}
